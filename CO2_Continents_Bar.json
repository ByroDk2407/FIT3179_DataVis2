{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Stacked bar chart of fossil fuel energy consumption by continent and year.",
  "width": 900,
  "height": 1200,
  "padding": 5,
  "background": null,

  "data": [
    {
      "name": "table",
      "url": "https://raw.githubusercontent.com/ByroDk2407/FIT3179_DataVis2/refs/heads/main/datasets/fossil_fuel_continents.csv",
      "format": {"type": "csv"},
      "transform": [
        {
          "type": "filter",
          "expr": "datum['Fossil fuels (TWh)'] != null"
        },
        {
          "type": "stack",
          "groupby": ["Entity"],
          "sort": {"field": "Year"},
          "field": "Fossil fuels (TWh)"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {"data": "table", "field": "Entity"}
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {"data": "table", "field": "y1"}
    },
    {
      "name": "color",
      "type": "sequential",
      "range": "category",
      "domain": {"data": "table", "field": "Year"}
    }
  ],

  "axes": [
    {"orient": "bottom", "scale": "x", "zindex": 1, "title": "Continent", "labelFontSize":16, "titleFontSize":20},
    {"orient": "left", "scale": "y", "zindex": 1, "title": "Total Fossil Fuel Consumption (TWh)", "offset":20, "labelFontSize":16, "titleFontSize":20}
  ],

  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:mouseover",
          "update": "{'Entity': datum.Entity, 'Year': 'Year: '+datum.Year, 'Fossil fuels (TWh)': 'Fossil fuel (TWh): '+format(datum['Fossil fuels (TWh)'], ',.0f')}"
        },
        {"events": "rect:mouseout", "update": "{}"}
      ]
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "Entity"},
          "width": {"scale": "x", "band": 1, "offset": -1},
          "y": {"scale": "y", "field": "y0", "offset": 0},
          "y2": {"scale": "y", "field": "y1"},
          "fill": {"scale": "color", "field": "Year"}
        },
        "update": {
          "fillOpacity": {"value": 1},
          "tooltip": {"signal": "{Year: datum.Year, Consumpton: format(datum['Fossil fuels (TWh)'], '.0f') + ' (TWh)'}"}
        },
        "hover": {
          "fillOpacity": {"value": 0.5}          
        }
      }
    }
  ]
}
