{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 900,
    "height": 600,
    "background": null,
  
    "params": [
          {
            "name": "Temp_Slider",
            "value": 1851,
            "bind": {
              "input": "range",
              "min": 1851,
              "max": 2024,
              "step": 1,
              "name": "Year: "
            }
            
          }
    ],
  
    "data": {
      "url": "https://raw.githubusercontent.com/ByroDk2407/FIT3179_DataVis2/refs/heads/main/datasets/temperature-anomaly.csv",
      "format":{"type": "csv"}
    },
    "transform": [
      {
        "filter": "year(datum.Year) <= Temp_Slider"
      }
    ],
  
    "mark": {"type": "line", "point":true},
  
    "encoding": {
        "x": {
            "field": "Year",
            "type": "temporal",
            "title": "Years",
            "axis":{
              "titleFontSize": 20,
              "labelFontSize": 16
            }
        },
        "y": {
            "field": "Temp Change",
            "type": "quantitative",
            "title": "Global Temperature Change (°C)",
            "axis":{
              "titleFontSize": 20,
              "labelFontSize": 16,
              "titlePadding":30
            }
        },
        "color": {
            "field": "Entity",
            "type": "nominal",
            "title": "Region",
            "scale": {"range": ["black", "steelblue", "orange"]},
            "legend": {
              "gradientLength": 587,
              "labelFontSize": 16,
              "labelLimit":360,
              "titleLimit":360,
              "titleFontSize": 20
            }
        },
        "tooltip":[
            {"field": "Year", "type": "temporal", "title": "Year: ", "format": "%Y"},
            {"field": "Temp Change", "type": "quantitative", "title": "Temperature Change (°C): ", "format":".3"},
            {"field": "Entity", "type": "nominal", "title": "Region: "}
        ]
    }
}
    