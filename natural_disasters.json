{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "title": "Natural Disasters",
  "params": [
    {
      "name": "Region_Select",
      "value": "Asia",
      "bind": {
        "input": "select",
        "options": [
          "World",
          "Asia", 
          "Europe", 
          "South America",
          "North America", 
          "Oceania", 
          "Africa"
        ],
        "name": "Region: "
      }
    }
  ],

  "data": {
    "url": "https://raw.githubusercontent.com/ByroDk2407/FIT3179_DataVis2/refs/heads/main/datasets/Pivoted_Natural_Disasters_Data.csv"
  },

  "transform": [
    {
      "filter": "datum['Country name'] == Region_Select"
    }
  ],

  "mark": {
    "type": "circle",
    "opacity": 0.9,
    "stroke": "black",
    "strokeWidth": 1
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "axis": { "grid": false }
    },
    "y": {
      "field": "Type of Disaster",
      "type": "nominal",
      "axis": { "title": "Type of Disaster", "offset": 25 }
    },
    "size": {
      "field": "Value",
      "type": "quantitative",
      "title": "Annual Deaths",
      "legend": { "clipHeight": 30 },
      "scale": { "rangeMax": 5000 }
    },
    "color": {
      "field": "Type of Disaster",
      "type": "nominal",
      "legend":null
    },
    "tooltip": [
      { "field": "Year", "type": "temporal", "title": "Year: ", "format": "%Y" },
      { "field": "Country name", "type": "nominal", "title": "Country: " },
      { "field": "Value", "type": "quantitative", "title": "Death Count: " }
    ]
  }
}
